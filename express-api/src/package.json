{
  "name": "express-api",
  "version": "0.0.1",
  "description": "Express API Gateway for Laravel Backend",
  "type": "module",
  "main": "dist/index.js",
  "imports": {
    "#config/*": "./src/config/*",
    "#common/*": "./src/common/*",
    "#modules/*": "./src/modules/*"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
